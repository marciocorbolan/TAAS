@model TAAS.Domain.MensagemDia

@{
    ViewData["Title"] = "Mensagens do Dia";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Tarefa</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">

        <!-- Card-header -->
        <div class="card-header">
            <h3 class="card-title">@Html.DisplayNameFor(model => model)</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->

        <!-- Card-body -->
        <div class="card-body">
            <div class="form-group">
                <div class="col-md-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.Id)
                    </strong>
                </div>
                <div class="col-md-10">
                    @Model.Id
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.Texto)
                    </strong>
                </div>
                <div class="col-md-10">
                    @Model.Texto
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.Exibida)
                    </strong>
                </div>
                <div class="col-md-10">
                    @(Model.Exibida == true ? "Sim" : "Não")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.DtCadastro)
                    </strong>
                </div>
                <div class="col-md-10">
                    @Model.DtCadastro
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.DtModificado)
                    </strong>
                </div>
                <div class="col-md-10">
                    @Model.DtModificado
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12" style="text-align: right;">
                    <a class="btn btn-primary" asp-controller="MensagensDia" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                    <a class="btn btn-secondary" asp-controller="MensagensDia" asp-action="Index">Voltar</a>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
