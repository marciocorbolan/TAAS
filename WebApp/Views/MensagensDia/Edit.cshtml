@model TAAS.Domain.MensagemDia

@{
    ViewData["Title"] = "Mensagens do Dia";
    ViewData["Action"] = "Update/" + Model.Id;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Tarefa</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- Main content -->
<section class="content">

    <!-- Alert box -->
    <div>
        @if (TempData["MessageOk"] != null)
        {
            <p class="alert alert-success">@TempData["MessageOk"]</p>
        }

        @if (TempData["MessageErro"] != null)
        {
            <p class="alert alert-danger">@TempData["MessageErro"]</p>
        }
    </div>
    <!-- /.Alert box -->

    <!-- Default box -->
    <div class="card">

        <!-- Card-header -->
        <div class="card-header">
            <h3 class="card-title">@Html.DisplayNameFor(model => model)</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->

        <!-- Card-body -->
        <div class="card-body">
            @await Html.PartialAsync("_Form")
        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
